    <body onLoad="draw(<?php echo htmlentities($this->points); ?>)">
		<div class="container">
			<canvas width="600" height="400" id="canvas"></canvas>
			<span id="first" x="" y="" hide="true"></span>
			<span id="second" x="" y="" hide="true"></span>
			<h2 id="dist">Distance:</span> 
    	</div>
